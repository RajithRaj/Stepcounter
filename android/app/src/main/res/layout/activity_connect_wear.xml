<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9F9"
    tools:context=".ConnectWearActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/cur_act_card"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34567"
                android:textColor="#6B6868"
                android:textSize="16dp"
                android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B6868"
            android:textSize="10dp"
            android:text="Activity Id"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2hrs 30mins"
                android:textStyle="bold"
                android:textColor="#1354A1"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B6868"
                android:textSize="10dp"
                android:text="Duration"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/crv_lightblude_card">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/crv_white_card">

                <ImageView
                    android:src="@mipmap/icon_step"
                    android:layout_width="30dp"
                    android:scaleType="fitCenter"
                    android:layout_height="30dp"/>



            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Steps"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:id="@+id/Txtstep"
                android:text="14000"/>



        </LinearLayout>
        <Space
            android:layout_width="15dp"
            android:layout_height="16dp"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/crv_light_green_card">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/crv_white_card">

                <ImageView
                    android:src="@mipmap/icon_heart"
                    android:layout_width="30dp"
                    android:scaleType="fitCenter"
                    android:layout_height="30dp"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="12dp"
                android:text="Heart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:id="@+id/TxtHeart"
                android:text="14000"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/riskLayoutOne"
            android:background="@drawable/crv_highrisk"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="10">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    app:tint="#ff0000"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/up_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Composite"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Risk name"
                android:textColor="#383838"
                android:textSize="10dp" />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="16dp"/>
        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/riskLayoutTwo"
            android:background="@drawable/crv_low_risk"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="10">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    app:tint="#00ff00"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/down_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textColor="#383838"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatigue"/>


            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk name"/>
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="16dp"/>
        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/riskLayoutThree"
            android:background="@drawable/crv_medium_risk"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="10">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    app:tint="#ff0000"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/up_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textColor="#383838"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dehydration"/>


            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk name"/>
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="8dp"
        android:padding="15dp"

        android:background="@drawable/crv_white_card"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/graphTitle"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatigue risk"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>






</LinearLayout>